<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:weightSum="4.7"
    android:orientation="vertical"
    tools:context=".LiveScore">

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="0dp"
        android:layout_weight="0.8"
        android1:orientation="vertical"
        android:background="#00563F"
        android:padding="10dp" >

        <TextView
            android1:id="@+id/teamName"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text=""
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android1:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
    
    <TableLayout
             android1:layout_width="match_parent"
             android1:layout_height="0dp"
             android:layout_weight="4"
             android:padding="5dp"
             android:layout_marginTop="5dp" >

             <TableRow
                 android1:id="@+id/tableRow1"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content" >
                 
                 <TextView
             android1:id="@+id/bollingTeam"
             android1:layout_width="wrap_content"
             android1:layout_height="wrap_content"
                  android:layout_marginLeft="30dp"
             android1:text=""
             android1:textAppearance="?android:attr/textAppearanceLarge" />

                 
             </TableRow>
             
              <TableRow
                 android1:id="@+id/tableRow1"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content" >
                 
                 <TextView
                     android1:id="@+id/target"
                     android1:layout_width="wrap_content"
                     android1:layout_height="wrap_content"
                     android1:text=""
                     android:layout_marginLeft="10dp"
                     android1:textAppearance="?android:attr/textAppearanceMedium" />
                 
                 
             </TableRow>

             <TableRow
                 android1:id="@+id/tableRow2"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content" >
                  
                 
                  <TextView
             android1:id="@+id/battingTeam"
             android1:layout_width="wrap_content"
             android1:layout_height="wrap_content"
             android1:text=""
             android:layout_marginLeft="30dp"
             android1:textAppearance="?android:attr/textAppearanceMedium" />
                 
             </TableRow>
             
              <TableRow
                 android1:id="@+id/tableRow3"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content" >
                 
                   
                    
                    <TextView
                        android1:id="@+id/over"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:text=""
                        android:layout_marginLeft="30dp"
                        android1:textAppearance="?android:attr/textAppearanceMedium" />
                
                   </TableRow>
                   

             <TableRow
                 android1:id="@+id/tableRow4"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content">
                  
                 <TextView
                     android1:id="@+id/batsman1"
                     android1:layout_width="wrap_content"
                     android1:layout_height="wrap_content"
                     android:layout_marginLeft="30dp"
                     android1:text=""
                     android1:textAppearance="?android:attr/textAppearanceMedium" />
                  
             </TableRow>

             <TableRow
                 android1:id="@+id/tableRow5"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content" >
                
                   <TextView
                       android1:id="@+id/batsman2"
                       android1:layout_width="wrap_content"
                       android1:layout_height="wrap_content"
                       android:layout_marginLeft="30dp"
                       android1:text=""
                       android1:textAppearance="?android:attr/textAppearanceMedium" />
                 
             </TableRow>
             <TableRow
                 android1:id="@+id/tableRow6"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content" >
                  
                    <TextView
                        android1:id="@+id/bowler"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android1:text=""
                        android1:textAppearance="?android:attr/textAppearanceMedium" />
                 
             </TableRow>
             
             
             <TextView
                 android1:id="@+id/match_status"
                 android1:layout_width="wrap_content"
                 android1:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="30dp"
                 android:layout_marginLeft="5dp"
                 android1:text=""
                 android1:textAppearance="?android:attr/textAppearanceMedium" />
             
         </TableLayout>
 

         

</LinearLayout>
